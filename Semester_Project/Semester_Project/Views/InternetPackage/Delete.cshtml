@model Semester_Project.Models.InternetPackage
@{
    ViewData["Title"] = "Delete Package";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Are you sure you want to delete this package?</h2>

<div>
    <strong>Package:</strong> @Model.PackageName <br />
    <strong>Speed:</strong> @Model.Speed Mbps <br />
    <strong>Price:</strong> @Model.Price.ToString("C")
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-2">🗑️ Confirm Delete</button>
    <a href="/InternetPackage/Index" class="btn btn-secondary mt-2">Cancel</a>
</form>
