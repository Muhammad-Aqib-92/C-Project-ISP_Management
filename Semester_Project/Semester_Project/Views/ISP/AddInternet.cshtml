@model Semester_Project.Models.InternetPackage

@{
    ViewData["Title"] = "Add Internet Package";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4">Add Internet Package</h2>

<form asp-action="AddInternet" asp-controller="ISP" method="post">
    <div class="form-group">
        <label for="PackageName">Package Name</label>
        <input type="text" class="form-control" id="PackageName" name="PackageName" required />
    </div>

    <div class="form-group">
        <label for="Speed">Speed (Mbps)</label>
        <input type="number" class="form-control" id="Speed" name="Speed" required />
    </div>

    <div class="form-group">
        <label for="Price">Price (PKR)</label>
        <input type="number" class="form-control" id="Price" name="Price" required />
    </div>

    <div class="form-group">
        <label for="Cost">Cost (PKR)</label>
        <input type="number" class="form-control" id="Cost" name="Cost" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">➕ Add Internet Package</button>
</form>

