@model ISP_user
@{
    ViewData["Title"] = "Delete Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger">Are you sure you want to delete this customer?</h2>

<div class="border rounded p-4 mb-4 bg-light shadow-sm">
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
    <p><strong>Address:</strong> @Model.Address</p>
</div>

<form asp-action="Delete" method="post" class="d-flex justify-content-between">
    <input type="hidden" asp-for="Id" />
    <div>
        <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
        <a href="@Url.Action("Customers", "ISP")" class="btn btn-outline-secondary">Cancel</a>
    </div>
    <a href="@Url.Action("Customers", "ISP")" class="btn btn-secondary">← Go Back</a>
</form>
