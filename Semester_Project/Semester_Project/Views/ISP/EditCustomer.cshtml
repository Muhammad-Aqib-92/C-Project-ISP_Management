@model ISP_user

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Customer</title>
    <link rel="stylesheet" href="~/styles.css" />
</head>
<body>

    <!-- Navbar -->
    <nav>
        <ul>
            <li><a asp-controller="ISP" asp-action="Dashboard">Dashboard</a></li>
            <li><a asp-controller="ISP" asp-action="Customers">Customers</a></li>
            <li><a asp-controller="ISP" asp-action="Billing">Billing</a></li>
            <li><a asp-controller="ISP" asp-action="Reports">Reports</a></li>
        </ul>
    </nav>

    <div class="container mt-5">
        <h2 class="mb-4">Edit Customer</h2>

        <form asp-action="EditCustomer" method="post" class="border p-4 rounded shadow-sm bg-light">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" required />
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" required />
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label">Phone</label>
                <input asp-for="Phone" class="form-control" required />
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label">Address</label>
                <input asp-for="Address" class="form-control" required />
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Customers", "ISP")" class="btn btn-outline-secondary">Back to Customers</a>
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>

</body>
</html>
